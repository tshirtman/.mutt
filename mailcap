#MS office documents
application/excel; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null
application/ms-exc; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null
application/msword; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null
application/vnd.ms-exc; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null
application/vnd.ms-excel; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null
application/x-msexcel; $HOME/.neomutt/mutt_bgrun libreoffice %s 2> /dev/null

# Images
image/*; $HOME/.neomutt/mutt_bgrun eog %s 2> /dev/null

# PDFs
application/pdf; $HOME/.neomutt/mutt_bgrun evince %s 2> /dev/null

# HTML
text/html; $HOME/.neomutt/mutt_bgrun ~/.local/node_modules/.bin/electron ~/.neomutt/html-viewer/main.js %s 2> /dev/null
text/html; $HOME/.neomutt/html2txt %s; copiousoutput

# calendar
text/calendar; mutt-ics; copiousoutput

text/*; vim %s

# Unidentified files
application/octet-stream; $HOME/.neomutt/mutt_bgrun xdg-open %s 2> /dev/null

multipart/alternative; $HOME/.neomutt/open-multipart %s
